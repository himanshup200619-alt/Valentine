<body>

    <div id="container">
        <h1>Jiya, will you be my Valentine? ‚ù§Ô∏è</h1>
        <div class="buttons">
            <button id="yesBtn">Yes</button>
            <button id="noBtn">No</button>
        </div>
        <div id="message">Yay! See you on the 14th! ü•∞</div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const message = document.getElementById('message');
        const heading = document.querySelector('h1');

        let yesScale = 1;

        // When she tries to hover or touch "No"
        noBtn.addEventListener('mouseover', moveNo);
        noBtn.addEventListener('touchstart', moveNo);

        function moveNo() {
            // Make "No" move to a random spot
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
            
            noBtn.style.position = 'absolute';
            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;

            // Make "Yes" grow bigger every time she tries to click "No"
            yesScale += 0.4;
            yesBtn.style.transform = `scale(${yesScale})`;
        }

        // When she finally clicks "Yes"
        yesBtn.addEventListener('click', () => {
            noBtn.style.display = 'none';
            yesBtn.style.display = 'none';
            heading.style.display = 'none';
            message.style.display = 'block';
            document.body.style.backgroundColor = '#ffcdd2';
        });
    </script>
</body>
</html>

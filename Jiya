    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>For Jiya</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #ffebee;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            overflow: hidden;
        }

        h1 {
            color: #d32f2f;
            font-size: 3rem;
            margin-bottom: 30px;
        }

        .buttons {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        #yesBtn {
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 15px 32px;
            font-size: 1.2rem;
            border-radius: 10px;
            cursor: pointer;
            transition: transform 0.2s;
        }

        #noBtn {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 15px 32px;
            font-size: 1.2rem;
            border-radius: 10px;
            position: relative;
            cursor: pointer;
        }

        #message {
            margin-top: 30px;
            font-size: 2rem;
            color: #d32f2f;
            display: none;
        }
    </style>
